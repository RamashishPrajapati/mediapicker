<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="1dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aimg_library_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.appcompat.widget.AppCompatImageView>

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_dialog_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"></View>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_photo_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_circle"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/aimg_library_image"
        app:layout_constraintEnd_toEndOf="@+id/aimg_library_image"
        app:layout_constraintStart_toStartOf="@+id/aimg_library_image"
        app:layout_constraintTop_toTopOf="@+id/aimg_library_image">

    </com.google.android.material.textview.MaterialTextView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aimg_media_type"
        android:layout_width="@dimen/margin_24"
        android:layout_height="@dimen/margin_24"
        android:backgroundTint="@color/transparent_background"
        android:elevation="@dimen/margin_2"
        app:layout_constraintBottom_toBottomOf="@+id/aimg_library_image"
        app:layout_constraintEnd_toEndOf="@+id/aimg_library_image"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toStartOf="@+id/aimg_library_image"
        app:layout_constraintTop_toTopOf="@+id/aimg_library_image"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/ic_video_icon">

    </androidx.appcompat.widget.AppCompatImageView>

</androidx.constraintlayout.widget.ConstraintLayout>